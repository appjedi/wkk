<div class="display-5 m-3">
    Promotion Email List
</div>

<div class="justify-content-center">
    
    <div class="card m-3">
        <div class="card-body">
            
            <% for(let i = 0; i < eventListPromo.length; i++) { %>
            <div id="elistpromo<%i%>" class="row event m-2"> 
                <div class="col">
                <%=eventListPromo[i].name%>
                </div>
                <div class="col">
                <%=eventListPromo[i].email%>
                </div>
                <div class="col">
                <%=eventListPromo[i].phone%>
                </div>
                <div class="col">
                <%=moment(eventListPromo[i].dateJoined).format('MMMM Do, YYYY')%>
                </div>

            </div>  
            <%   }  %>

            </div> <!-- Card body -->
        </div> <!-- Card  -->



</div> <!-- ends justify-content-center div -->

